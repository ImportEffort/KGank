<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/gank_type_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gank_type_image_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="一个滑动关闭Activity的组件，可以设置上下左右滑动关闭"
            android:textColor="#FF333333"
            android:textSize="16sp" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/gank_type_image_item_image"
            android:layout_width="120dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/gank_type_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gank_type_item_ll"
        android:layout_marginTop="10dp"
        android:text="111"
        android:textColor="#FF666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gank_type_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gank_type_item_ll"
        android:layout_marginTop="10dp"
        android:text="111"
        android:textColor="#FF666666"
        android:textSize="14sp" />

    <View
        android:layout_below="@+id/gank_type_item_time"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>